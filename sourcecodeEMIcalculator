    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Statement stmt;
        ResultSet rset;
        int loantype = 0;
        int intrate = 0;
        int emi=0;
        int num=0,den=0;
        int months=Integer.parseInt(jTextField1.getText());
        int loanamt=Integer.parseInt(jTextField2.getText());
        //Getting the selected btn
        if (jRadioButton1.isSelected()) {
            loantype = 1;
        }
        if (jRadioButton2.isSelected()) {
            loantype = 2;
        }
        if (jRadioButton3.isSelected()) {
            loantype = 3;
        }
        if (jRadioButton4.isSelected()) {

            loantype = 4;
        }

        try {   //loading mysql drive
            Class.forName("com.mysql.cj.jdbc.Driver");
            System.out.println("Driver Loaded");
            //ESTABLISHING THE CONNECTION
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/loan", "root", "password");
            stmt = conn.createStatement();
            rset = stmt.executeQuery("select * from loantype where ltype=" + loantype);
            if (rset.next()) {
                intrate = rset.getInt("interest");
            }
            num=(int) Math.pow(loanamt*intrate*(1+intrate),months);
            den=(int) Math.pow((1+intrate),(months-1));
            emi=(int)num/den;
            jLabel4.setText("Your Monthy EMI for"+loanamt+" @"+intrate+"% for "+months+"Months is : "+emi);
            conn.close();
        } catch (ClassNotFoundException e) {
            System.out.println(e);
        } catch (SQLException x) {
            System.out.println("CONNECTION FAILED!");

        }

    }                                        

